{
    "manifest_version": 2,
    "name": "BingChatTweaker",
    "version": "1.0",
    "description": "A Firefox extension to modify Bing Chat settings.",
    "icons": {
        "16": "icons/icon-16.png",
        "32": "icons/icon-32.png",
        "48": "icons/icon-48.png"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content_scripts/main.js"]
      }
    ],
    "browser_action": {
      "default_icon": {
        "16": "icons/icon-16.png",
        "32": "icons/icon-32.png",
        "48": "icons/icon-48.png"
      },
      "default_popup": "popup/popup.html"
    }
  }
  